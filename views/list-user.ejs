<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>Document</title>
</head>
<body>
<html>
    <%- include('header')%>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div cls="col-md-8">
        <h2 class="title-blue">List User</h2>
        <a class="btn btn-warning" href="/add">Add User</a>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Fullname</th>
              <th scope="col">Password</th>
              <th scope="col">Username</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            <% users.forEach((user)=>{ %>
              <tr>
                <th scope="row">
                  <%=user.id%>
                </th>
                <td>
                  <a href="/users/<%=user.id%>">
                    <%=user.fullname%>
                  </a>
                </td>
                <td>*****</td>
                <td>
                  <%=user.username%>
                </td>
                <td>
                  <a class="btn btn-warning" href="/update/<%=user.id%>">Edit</a>
                  <a class="btn btn-danger" href="/delete/<%=user.id%>" onclick="return confirm('Ban Co Chac chan xoa ?')">Delete</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </body>

  </html>
</body>
